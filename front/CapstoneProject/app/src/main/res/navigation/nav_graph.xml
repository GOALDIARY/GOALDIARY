<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.capstoneproject.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.capstoneproject.fragment.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.capstoneproject.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_registerFragment_to_proceedingFragment"
            app:destination="@id/proceedingFragment" />
        <action
                android:id="@+id/action_registerFragment_to_subGoalRegisterFragment"
                app:destination="@id/subGoalRegisterFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.capstoneproject.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_homeFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.capstoneproject.fragment.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_listFragment_to_correctionFragment"
            app:destination="@id/correctionFragment"/>
        <action
            android:id="@+id/action_listFragment_to_proceedingFragment"
            app:destination="@id/proceedingFragment" />
    </fragment>
    <fragment
        android:id="@+id/correctionFragment"
        android:name="com.example.capstoneproject.fragment.CorrectionFragment"
        android:label="fragment_correction"
        tools:layout="@layout/fragment_correction" >
        <action
            android:id="@+id/action_correctionFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_correctionFragment_to_proceedingFragment"
            app:destination="@id/proceedingFragment" />
        <action
            android:id="@+id/action_correctionFragment_to_subGoalListFragment"
            app:destination="@id/subGoalListFragment" />
    </fragment>
    <fragment
        android:id="@+id/proceedingFragment"
        android:name="com.example.capstoneproject.fragment.ProceedingFragment"
        android:label="fragment_proceeding"
        tools:layout="@layout/fragment_proceeding" >
        <argument
            android:name="selectedGoalIndex"
            app:argType="integer" />
        <action
            android:id="@+id/action_proceedingFragment_to_subGoalListFragment"
            app:destination="@id/subGoalListFragment" />
            <argument
                android:name="selectedGoalIndex"
                app:argType="integer" />
        <action
            android:id="@+id/action_proceedingFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_proceedingFragment_to_feedbackFragment"
            app:destination="@id/feedbackFragment" />
    </fragment>
    <fragment
        android:id="@+id/writeFragment"
        android:name="com.example.capstoneproject.fragment.WriteFragment"
        android:label="fragment_write"
        tools:layout="@layout/fragment_write" >
        <action
            android:id="@+id/action_writeFragment_to_recordsFragment"
            app:destination="@id/recordsFragment" />
        <action
            android:id="@+id/action_writeFragment_to_subGoalDetailFragment"
            app:destination="@id/subGoalDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/graphFragment"
        android:name="com.example.capstoneproject.fragment.GraphFragment"
        android:label="fragment_graph"
        tools:layout="@layout/fragment_graph" >
        <action
            android:id="@+id/action_graphFragment_to_recordsFragment"
            app:destination="@id/recordsFragment" />
    </fragment>
    <fragment
        android:id="@+id/recordsFragment"
        android:name="com.example.capstoneproject.fragment.RecordsFragment"
        android:label="fragment_records"
        tools:layout="@layout/fragment_records" >
        <action
            android:id="@+id/action_recordsFragment_to_writeFragment"
            app:destination="@id/writeFragment" />
        <action
            android:id="@+id/action_recordsFragment_to_subGoalDetailFragment"
            app:destination="@id/subGoalDetailFragment" />
        <action
            android:id="@+id/action_recordsFragment_to_graphFragment"
            app:destination="@id/graphFragment" />
        <action
                android:id="@+id/action_recordsFragment_to_voiceFragment"
                app:destination="@id/voiceFragment" />
    </fragment>
    <fragment
        android:id="@+id/voiceFragment"
        android:name="com.example.capstoneproject.fragment.VoiceFragment"
        android:label="fragment_voice"
        tools:layout="@layout/fragment_voice" >
        <action
            android:id="@+id/action_voiceFragment_to_subGoalDetailFragment"
            app:destination="@id/subGoalDetailFragment" />
        <action
                android:id="@+id/action_voiceFragment_to_recordsFragment"
                app:destination="@id/recordsFragment" />
    </fragment>
    <fragment
        android:id="@+id/subGoalListFragment"
        android:name="com.example.capstoneproject.fragment.SubGoalListFragment"
        android:label="fragment_sub_goal_list"
        tools:layout="@layout/fragment_sub_goal_list" >
        <argument
            android:name="selectedGoalIndex"
            app:argType="integer" />
        <action
            android:id="@+id/action_subGoalListFragment_to_subGoalDetailFragment"
            app:destination="@id/subGoalDetailFragment" />
            <argument
                android:name="subGoal"
                app:argType="string" />
        <action
            android:id="@+id/action_subGoalListFragment_to_proceedingFragment"
            app:destination="@id/proceedingFragment" />
        <action
            android:id="@+id/action_subGoalListFragment_to_correctionFragment"
            app:destination="@id/correctionFragment" />
    </fragment>
    <fragment
        android:id="@+id/subGoalDetailFragment"
        android:name="com.example.capstoneproject.fragment.SubGoalDetailFragment"
        android:label="fragment_sub_goal_detail"
        tools:layout="@layout/fragment_sub_goal_detail" >
        <argument
            android:name="subGoal"
            app:argType="string" />
        <action
            android:id="@+id/action_subGoalDetailFragment_to_writeFragment"
            app:destination="@id/writeFragment" />
        <action
            android:id="@+id/action_subGoalDetailFragment_to_voiceFragment"
            app:destination="@id/voiceFragment" />
        <action
            android:id="@+id/action_subGoalDetailFragment_to_recordsFragment"
            app:destination="@id/recordsFragment" />
        <action
            android:id="@+id/action_subGoalDetailFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <action
            android:id="@+id/action_subGoalDetailFragment_to_subGoalListFragment"
            app:destination="@id/subGoalListFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.capstoneproject.fragment.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_resultFragment_to_subGoalDetailFragment"
            app:destination="@id/subGoalDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.example.capstoneproject.fragment.FeedbackFragment"
        android:label="fragment_feedback"
        tools:layout="@layout/fragment_feedback" >
        <action
            android:id="@+id/action_feedbackFragment_to_proceedingFragment"
            app:destination="@id/proceedingFragment" />
    </fragment>
    <fragment
            android:id="@+id/subGoalRegisterFragment"
            android:name="com.example.capstoneproject.fragment.SubGoalRegisterFragment"
            android:label="fragment_sub_goal_register"
            tools:layout="@layout/fragment_sub_goal_register" >
        <action
                android:id="@+id/action_subGoalRegisterFragment_to_listFragment"
                app:destination="@id/listFragment" />
    </fragment>
</navigation>